{
  "version": 9,
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug",
      "binaryDir": "_build/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${CMAKE_SOURCE_DIR}/_release"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "binaryDir": "_build/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${CMAKE_SOURCE_DIR}/_release"
      }
    },
    {
      "name": "rel-with-deb-info",
      "displayName": "Release with Debug information",
      "binaryDir": "_build/RelWithDebInfo",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_INSTALL_PREFIX": "${CMAKE_SOURCE_DIR}/_release"
      }
    }
  ]
}